          "raw": "{{base_url}}/episodes?subject=MOUNTAIN,WATERFALL",
          "host": ["{{base_url}}"],
          "path": ["episodes"],
          "query": [
            {
              "key": "subject",
              "value": "MOUNTAIN,WATERFALL"
            }
          ]
        }
      }
    },
    {
      "name": "Filter Episodes by Season",
      "request": {
        "method": "GET",
